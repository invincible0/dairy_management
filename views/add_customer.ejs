<%- include('./partials/header') %>
        <div class="container center">
            <div class="white form card row">
                <form action="/customers/add" method="post" class="col s12">
                    <h5>Enter Customer details</h5>
                    <div class="row">
                        <div class="input-field col s12">
                            <input 
                                type='text' 
                                placeholder="Name" 
                                name='Name' 
                                class="validate" 
                                maxlength="30"
                                minlength="3"
                                required/>
                        </div>

                        <div  class="input-field col s12">
                            <input 
                                type='text' 
                                placeholder="Address" 
                                name='Address' 
                                maxlength="50"
                                minlength="3"
                                required/>
                        </div>

                        <div class="input-field col s12">
                            <input 
                                type='number' 
                                placeholder="Mobile Number" 
                                name='Mobile' 
                                min="1000000000"
                                max="9999999999"
                                required/>
                        </div>
                        <div  class="input-field col s12">
                            <input 
                                type='text' 
                                placeholder="Additional Note" 
                                name='Note' 
                                maxlength="50"
                                minlength="3"/>
                        </div>
                    </div>
                    <button type='submit' class="btn-small margin-1 round-border">Add
                        <i class="material-icons right" style="font-size: 1rem; margin-left: 0.5rem;">send</i>
                    </button>
                    <a class="btn-small red margin-1 round-border" href="/" >Cancel
                        <i class="material-icons right" style="font-size: 1rem; margin-left: 0.5rem;">clear</i>
                    </a>
                </form>
            </div>
        </div>
<%- include('./partials/footer') %>