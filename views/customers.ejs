<%- include('./partials/header') %>

<div class="container">
    <div>
        <div class="row">
            <form action="/customers" method="POST" class="col s12">
                <div class="row">
                    <div class="input-field col s12">
                        <input 
                            type='text' 
                            placeholder="Customer Name" 
                            name='Name'
                            required/>
                    </div>
                    <button type='submit' class="btn-small margin-1 round-border">Search
                        <i class="material-icons right" style="font-size: 1rem; margin-left: 0.5rem;">send</i>
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
<div class="continer">
    <table class="highlight white card">
        <thead>
            <tr>
                <th>Name</th>
                <th>Address</th>
                <th>Mob.</th>
                <th>Amount Due</th>
                <th>Note</th>
                <th>.</th>
                <th>.</th>
            </tr>
        </thead>
        <tbody>
            <% if (customers.length > 0) { %>
                <% customers.forEach((customer, index) => { %>
                    <tr>
                        <td><a href="/customers/<%=customer.ID%>"><%= customer.NAME%></a></td>
                        <td><%= customer.ADDRESS%></td>
                        <td><%= customer.MOBILE%></td>
                        <td><%= customer.DUE%></td>
                        <td><%= customer.NOTE%></td>
                        <td><a class="btn-floating btn-small waves-effect waves-light blue" href='/customers/edit/<%=customer.ID%>'>
                                <i class="material-icons">edit</i>
                            </a>
                        </td>
                        <td><a class="btn-floating btn-small waves-effect waves-light green" href='/transactions/add/<%=customer.ID%>'>     
                                <i class="material-icons">add</i>
                            </a>
                        </td>
                    </tr>
                <%})%>
            <% }%>
        </tbody>
    </table>
</div>
<%- include('./partials/footer') %>